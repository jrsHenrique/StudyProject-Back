datasource db{
    provider = "sqlserver"
    url = env("DATABASE_URL")
}

generator client{
    provider = "prisma-client-js"
}

model User {
    id Int @id @default(autoincrement())
    name String 
    email String @unique
    password String
    phone String
    products Product[]
}

model Product{
    id Int @id @default(autoincrement())
    name String 
    description String
    price Float
    quantity Int
    userId Int
    user User @relation(fields: [userId], references: [id])
}

